extends base
block content
    ul.breadcrumb
    .page-content-wrap
    .row
      .col-md-12
       for row, index in data
        form.form-horizontal(enctype="multipart/form-data",role='form',method='post' action='/boiler/update/#{row.id}')
          .panel.panel-default
            .panel-heading
              h3.panel-title
                strong Add Boiler
              ul.panel-controls
            .panel-body
            .panel-body
              .form-group
                label.col-md-3.col-xs-12.control-label Company
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_company",name="boiler_company",value="#{row.boiler_company}")
                  span.help-block
              .form-group
                label.col-md-3.col-xs-12.control-label Serial No
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_serial_no",name="boiler_serial_no",value="#{row.boiler_serial_no}")
                  span.help-block
              .form-group
                label.col-md-3.col-xs-12.control-label Brand
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_brand",name="boiler_brand",value="#{row.boiler_brand}")
                  span.help-block
              .form-group
                label.col-md-3.col-xs-12.control-label Max Pressure
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_pressure",name="boiler_pressure",value="#{row.boiler_pressure}")
                  span.help-block
              .form-group
                label.col-md-3.col-xs-12.control-label Model
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_model",name="boiler_model",value="#{row.boiler_model}")
                  span.help-block
              .form-group
                label.col-md-3.col-xs-12.control-label Efficiency
                .col-md-6.col-xs-12
                  .input-group
                    span.input-group-addon
                      span.fa.fa-pencil
                    input.form-control(type='text',id="boiler_eff",name="boiler_eff",value="#{row.boiler_eff}")
                  span.help-block
              
            .panel-footer
              button.btn.btn-default Clear Form
              button.btn.btn-primary.pull-right Submit
    #mb-signout.message-box.animated.fadeIn(data-sound='alert')
        .mb-container
          .mb-middle
            .mb-title
              span.fa.fa-sign-out
              |  Log 
              strong Out
              |  ?
            .mb-content
              p Are you sure you want to log out?
              p Press No if you want to continue work. Press Yes to logout current user.
            .mb-footer
              .pull-right
                a.btn.btn-success.btn-lg(href='pages-login.html') Yes
                button.btn.btn-default.btn-lg.mb-control-close No

