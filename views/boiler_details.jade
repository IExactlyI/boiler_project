extends base
block content
    ul.breadcrumb
    .page-content-wrap
        .row
          .col-md-12
            // START DEFAULT DATATABLE
            .panel.panel-default
              .panel-heading
                h3.panel-title Boiler Details&nbsp;
              .panel-body
                table.table.datatable
                   thead
                     tr
                       th No
                       th Boiler Name
                       th Time
                       th LPG (kg/hr)
                       th Steam (kg/hr)
                       th WaterFlow(In) (kg/hr)
                       th Steam Pressure (bar)
                       th Temperature 1 (°C)
                       th Temperature 2 (°C)
                   tbody
                        for row, index in data
                            tr
                                
                                td #{index+1}
                                td #{row.boiler_name}
                                td #{row.read_time.toLocaleString()}
                                td #{row.lpg}
                                td #{row.steam}
                                td #{row.wf_in}
                                td #{row.wf_out}
                                td #{row.temp1}
                                td #{row.temp2}
                                
    #mb-signout.message-box.animated.fadeIn(data-sound='alert')
        .mb-container
          .mb-middle
            .mb-title
              span.fa.fa-sign-out
              |  Log 
              strong Out
              |  ?
            .mb-content
              p Are you sure you want to log out?
              p Press No if you want to continue work. Press Yes to logout current user.
            .mb-footer
              .pull-right
                a.btn.btn-success.btn-lg(href='pages-login.html') Yes
                button.btn.btn-default.btn-lg.mb-control-close No

